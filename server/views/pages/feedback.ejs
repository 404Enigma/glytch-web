                <!-- TABLE CONTAINER -->
                <div class="table-container">
                    <div class="container d-flex justify-content-center feedback-container">
                        <div class="card mb-3">
                            <div class="card-header border-white"><h4>Feedback</h4></div>
                            <div class="card-body">
                                <form class="row g-3">
                                    <div class="col-md-6">
                                        <label for="first" class="form-label">First Name</label>
                                        <input type="text" class="form-control" id="first" placeholder="Pratyush" />
                                    </div>
                                    <div class="col-md-6">
                                        <label for="last" class="form-label">Last Name</label>
                                        <input type="text" class="form-control" id="last" placeholder="Jain" />
                                    </div>
                                    <div class="col-12">
                                        <label for="feedback" class="form-label">Feedback</label>
                                        <input
                                            type="text"
                                            class="form-control"
                                            id="feedback"
                                            placeholder="I liked the product."
                                        />
                                    </div>
                                    <div class="col-12">
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- TABLE 1 -->
                    <div class="container">
                        <h2 class="mb-5">Reviews</h2>
                        <table id="dataTable" class="table display">
                            <thead>
                                <tr>
                                    <th>Reviews</th>
                                    <th>Label</th>
                                </tr>
                            </thead>
                            <tbody> </tbody>
                        </table>
                    </div>
                    <br />
                </div>
                <!-- /TABLE CONTAINER -->
                <br />
                <br />
